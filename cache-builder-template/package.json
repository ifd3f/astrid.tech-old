{
  "name": "typescript-cli-starter",
  "private": true,
  "version": "1.0.0",
  "description": "A simple and zero-opinion typescript starter template for building cross-platform command line applications.",
  "author": "Khalid Zoabi <kzoabi@outlook.com>",
  "keywords": [
    "typescript",
    "cli",
    "starter"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "bin": "./dist/cli.js",
  "files": [
    "dist/**/*",
    "!dist/**/*.test.js"
  ],
  "scripts": {
    "dev": "ts-node ./src/cli.ts",
    "clean": "rimraf ./dist/ ./exec/",
    "build": "npm run clean && tsc",
    "test": "jest",
    "bundle": "npm run build && pkg . --out-dir ./exec/"
  },
  "devDependencies": {
    "jest": "^27.2.0",
    "pkg": "^5.3.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@astrid.tech/node-lib": "file:../node-lib",
    "commander": "^8.2.0"
  }
}
